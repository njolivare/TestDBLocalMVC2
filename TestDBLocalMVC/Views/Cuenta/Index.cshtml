@model IEnumerable<TestDBLocalMVC.Models.Cuenta>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Cuentas</h2>

<p>
    @Html.ActionLink("Crear Cuenta", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero) &nbsp;
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono) &nbsp;
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlanCelular.Codigo) &nbsp;
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nombre) &nbsp;
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlanCelular.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
