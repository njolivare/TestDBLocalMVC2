@model IEnumerable<TestDBLocalMVC.Models.PlanCelular>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Planes</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo) &nbsp;
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre) &nbsp;
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TarifaBasica) &nbsp;
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EsAL) &nbsp;
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TarifaBasica)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EsAL)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
